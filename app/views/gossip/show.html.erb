<head>
<title>The Gossip Project</title>
</head>
<center>
<body>
<br>
<% if alert == "success" %>
  <div class="alert alert-success" role="alert">
      <p>Ton commentaire a bien été enregistré!</p>
  </div>
<% elsif alert == "comment_destroy" %>
  <div class="alert alert-success" role="alert">
      <p>Ton commentaire a bien été supprimé!</p>
  </div>
<% end %>
<div class="card" style="width: 25rem;">
	<div class="card-body">
	<h4 class="card-title"><%= @gossip.title %></h4>
	<p class="card-text">"
  <%= @gossip.content %>
  "
	<%= link_to @gossip.user.first_name, user_path(@gossip.user.id) %>
  de <%= link_to @gossip.user.city.name, city_path(@gossip.user.city.id) %>
  <br><br>
  <%= @gossip.date.strftime("Créé le %d/%m/%Y") %><br/>
  <% if current_user.id == @gossip.user.id %>
    <%= link_to "Editer le gossip!", edit_gossip_path(@gossip.id) %><br>
    <%= link_to "Detruire le gossip?!", gossip_path(@gossip.id), method: :delete %><br/>
  <% end %>
  </p>
	</div>
</div><br/>
  Commentaires :
  <br> 
<% @comments.each do |comment| %>
<div class="card" style="width: 20rem;">
  <div class="card-body">
    <p class="card-text"><%= comment.user.first_name + " " + comment.user.last_name + " :" %><br>
    	<small><%= comment.date.strftime("Créé le %d/%m/%Y") %></small> <br/>
    	<%= comment.content %></br>
    	<%= link_to "Editer le commentaire", edit_comment_path(comment.id) %>
    </p>
  </div>
</div>
<br>
<% end %>
 
<%= form_tag url_for(controller: 'comment', action: 'create', method: 'post') do %>
  <%= label_tag 'Lache ton com\'!' %><br/>
  <%= text_area_tag 'comment' %>
  <%= hidden_field_tag 'gossip_id', @gossip.id %>
  <br /> <br />
  <%= submit_tag "Envoyer" %><br/>
  
 </div>
<% end %>
</body>
</center>
 