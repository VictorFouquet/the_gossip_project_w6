<head>
<title>The Gossip Project</title>
</head>
<center>
<body>

<br>
<% if alert == "success" %>
  <div class="alert alert-success" role="alert">
    <p>Ton commentaire a bien été enregistré!</p>
  </div>
<% elsif alert == "comment_destroy" %>
  <div class="alert alert-success" role="alert">
      <p>Ton commentaire a bien été supprimé!</p>
  </div>
<% end %>

  <div class="card" style="width: 35rem; margin-bottom: 5rem">
    <div class="card-body">
       <div class="card", style="width: 25rem; padding: 2rem; margin-top: 2rem; margin-bottom: 5rem">
         <h3 class="card-title"><b><%= @gossip.title %></b></h3>
          <div class="card" style="width: 20rem; padding: 2rem; margin-bottom: 2rem">
            <p class="card-text">
              "<%= @gossip.content %>"
            </p>
          </div>
        
          <br/><br/>
        
          <%= link_to @gossip.user.first_name, user_path(@gossip.user.id) %> de <%= link_to @gossip.user.city.name, city_path(@gossip.user.city.id) %>
        
          <br><br>
        
          <small><%= @gossip.date.strftime("Créé le %d/%m/%Y") %></small>

          <br/>
        
          <% if current_user.id == @gossip.user.id %>
            <%= link_to "Editer le gossip!", edit_gossip_path(@gossip.id) %><br>
            <%= link_to "Detruire le gossip?!", gossip_path(@gossip.id), method: :delete %><br/>
          <% end %>
          
          <br/><br/>
      </div>
      <h4>Commentaires :</h4>
      
      <br> 
      
      <% @comments.each do |comment| %>
        <div class="card" style="width: 20rem;">
          <div class="card-body">
            <p class="card-text"><%= comment.user.first_name + " " + comment.user.last_name + " :" %><br>
            <small><%= comment.date.strftime("Créé le %d/%m/%Y") %></small> <br/>
            <%= comment.content %></br>
            <%= link_to "Editer le commentaire", edit_comment_path(comment.id) %>
            </p>
          </div>
        </div>
        <br>
      <% end %>
 
      <%= form_tag url_for(controller: 'comment', action: 'create', method: 'post') do %>
        <%= label_tag 'Lache ton com\'!' %><br/>
        <%= text_area_tag 'comment' %>
        <%= hidden_field_tag 'gossip_id', @gossip.id %>
        
        <br /> <br />
        
        <%= submit_tag "Envoyer" %><br/>
  
    </div>
    <% end %>
  </div>  

</body>
</center>
 