<head>
<title>The Gossip Project</title>
</head>
<center>

<% if alert == "success" %>
  <div class="alert alert-success" role="alert">
      <p>Your gossip has been correctly saved.</p>
  </div>
<% elsif alert == "destroy" %>
	<div class="alert alert-success" role="alert">
      <p>Your gossip has been correctly destroyed.</p>
  </div>
<% end %>
<br>
<h2>Bienvenue sur The Gossip Project!</h2>
<br/>
<%= image_tag('rumors.jpg', width: '50%', height: '50%') %><br>
<br><h3>Voici les potins !</h3>
<%= link_to "(...et pour en créer un nouveau, c'est par là !)", new_gossip_path %><br/>
<br><h3>🙈 🙉 🙊‍</h3><br>

</center>
<% @gossips.each do |gossip| %>
<center>
<div class="card" style="width: 25rem;">
  <div class="card-body">
    <h5 class="card-title"><b>"<%= gossip.title %>"</b></h5>
    <p class="card-text"><b>Auteur :</b> <%= gossip.user.first_name %></br> </p>
    <%= link_to "Lire le gossip", gossip_path(gossip.id) %>
  </div>
</div>
<br>
</center>
<% end %>
